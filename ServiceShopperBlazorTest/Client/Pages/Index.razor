@page "/"
@inject CaseClient caseClient  
@inject ItemClient itemClient 
<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<button class="btn btn-primary" @onclick="UseCaseClient">Use CaseClient</button>
<button class="btn btn-primary" @onclick="UseItemClient">Use ItemClient</button>

@code{

    void UseCaseClient()
    {
        caseClient.DoMiddlewareCall();
    }

    void UseItemClient()
    {
        itemClient.DoMiddlewareCall();
    }
}